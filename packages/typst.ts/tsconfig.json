{
  "compilerOptions": {
    "types": ["web", "vite/client", "./src/global.d.mts"],
    "baseUrl": ".",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "declaration": false,
    "stripInternal": true,

    "lib": ["ES5", "ES6", "ES7", "ES2018", "ES2022"]
  },
  "include": ["src/**/*.mts"],
  "exclude": ["src/contrib/canvas-worker.mts"]
}
