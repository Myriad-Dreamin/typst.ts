{
  "compilerOptions": {
    "target": "ES2018",
    "strict": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "declaration": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./index.ts"],
  "exclude": ["node_modules"]
}
