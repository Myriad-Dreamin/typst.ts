{
  "compilerOptions": {
    "types": ["web", "./src/global.d.mts"],
    "lib": ["ES5", "ES6", "ES7", "ES2018"],
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "dist/esm",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "stripInternal": true
  },
  "include": ["src/**/*.mts"]
}
