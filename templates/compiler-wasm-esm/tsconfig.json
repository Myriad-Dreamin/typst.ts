{
  "compilerOptions": {
    "types": ["node", "web"],
    "baseUrl": ".",
    "target": "ES2020",
    "allowJs": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist/esm",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "lib": ["ES5", "ES6", "ES7", "ES2018"]
  },
  "include": ["src/**/*.mts", "src/cached-font-middleware.mts", "src/main.mts", "src/main.snippet.mts", "src/main.package.mts"]
}
