{
  "compilerOptions": {
    "types": ["node", "web"],
    "baseUrl": ".",
    "target": "ES2020",
    "allowJs": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "dist/cjs",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "lib": ["ES5", "ES6", "ES7", "ES2018"]
  },
  "include": ["src/**/*.cts", "src/cached-font-middleware.cts", "src/main.cts", "src/main.snippet.cts", "src/main.package.cts"]
}
